<% include ../partials/header %>

<div class="container content">
    
    <h1 style="text-align: center; margin-bottom:3%;">Edit <%= person.first %>&nbsp<%= person.last %>'s Profile</h1>
    <form id="editForm" action="/faculty/<%= person.first %>-<%= person.last %>?_method=PUT" method="POST">
        <div class="form-group">
            <label class="show-edit-lbl">First Name: </label>
            <input class="form-control" type="text" name="falc[first]" maxlength="60" value="<%= person.first %>" required/>
        </div>
        <div class="form-group">
            <label class="show-edit-lbl">Last Name: </label>
            <input class="form-control" type="text" name="falc[last]" maxlength="60" value="<%= person.last %>" required/>
        </div>
        <div class="form-group">
            <label class="show-edit-lbl">Title: </label>
            <input class="form-control" type="text" name="falc[title]" maxlength="60" value="<%= person.title %>" required/>
        </div>
        <div class="form-group">
            <label class="show-edit-lbl">Phone: </label>
            <input class="form-control" type="text" name="falc[phone]" value="<%= person.phone %>" required/>
        </div>
        <div class="form-group">
            <label class="show-edit-lbl">Email: </label>
            <input class="form-control" type="email" name="falc[email]" maxlength="60" value="<%= person.email %>" required/>
        </div>
        <div class="form-group">
            <label>Bio: </label>
            <textarea id="falcInfoEdit" class="form-control" name="falc[info]" required><%= person.info.replace(/<br \/>/g, '\n'); %></textarea>
        </div>
        <div class="form-group">
            <button onclick="falcEditTextConvert()" class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>